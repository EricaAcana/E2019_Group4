$dbname="herbalyreg";
$conn=mysqli_connect($servername, $mysql_user, $mysql_pass, $dbname);
if($conn){
	echo("connection success");
}else{
	echo("connection not success");

}
if($_SERVER['REQUEST_METHOD']=='POST'){
	$name=$_POST['name'];
